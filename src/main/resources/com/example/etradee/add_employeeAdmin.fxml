                  <VBox alignment="CENTER" spacing="15.0">
                     <children>
                        <VBox alignment="CENTER">
                           <children>
                              <Label alignment="CENTER" style="-fx-font-weight: 700; -fx-font-size: 30px;" text="Add Employee" />
