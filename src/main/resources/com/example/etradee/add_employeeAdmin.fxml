                                    <Font name="System Bold" size="12.0" />
                                 </font>
                                 <tooltip>
                                    <Tooltip text="Name of Employee" />
                                 </tooltip>
                              </TextField>
                              <TextField fx:id="ADD_username" alignment="CENTER" prefHeight="40.0" prefWidth="350.0" promptText="Username" style="-fx-background-color: #FFFFFF; -fx-font-size: 15px;">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                                 <tooltip>
                                    <Tooltip text="Username" />
                                 </tooltip>
                              </TextField>
                              <TextField fx:id="ADD_password" alignment="CENTER" prefHeight="40.0" prefWidth="350.0" promptText="Password" style="-fx-background-color: #FFFFFF; -fx-font-size: 15px;">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                                 <tooltip>
                                    <Tooltip text="Password" />
                                 </tooltip>
                              </TextField>
                              <ChoiceBox fx:id="ADD_role" prefHeight="40.0" prefWidth="350.0">
