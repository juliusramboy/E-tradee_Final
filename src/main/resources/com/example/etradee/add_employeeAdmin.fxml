                           </children>
                        </VBox>
                        <VBox prefWidth="350.0" spacing="10.0">
                           <children>
                              <TextField fx:id="ADD_name" alignment="CENTER" prefHeight="40.0" prefWidth="350.0" promptText="Name of Employee" style="-fx-background-color: #FFFFFF; -fx-font-size: 15px;">
