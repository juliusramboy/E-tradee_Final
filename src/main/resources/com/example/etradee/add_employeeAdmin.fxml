                        </HBox>
                        <HBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Button fx:id="ADD_confirmBtn" mnemonicParsing="false" onAction="#handleconfirmADD" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #D9D9D9; -fx-background-radius: 20; -fx-font-weight: 700; -fx-font-size: 15;" styleClass="btnhover" text="Confirm" />
                              <Button fx:id="ADD_cancelBtn" mnemonicParsing="false" onAction="#handlecancelADD" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #D9D9D9; -fx-background-radius: 20; -fx-font-weight: 700; -fx-font-size: 15;" styleClass="btnhover" text="Cancel" />
