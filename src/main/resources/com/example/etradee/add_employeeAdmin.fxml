<AnchorPane prefHeight="700.0" prefWidth="700.0" styleClass="mainpanelhover" stylesheets="@design/design.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.etradee.addEmployee">
   <children>
      <AnchorPane prefHeight="700.0" prefWidth="700.0" style="-fx-background-color: #EDEDED; -fx-border-color: #ECCECE; -fx-border-width: 5px; -fx-background-radius: 10; -fx-border-radius: 10;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
