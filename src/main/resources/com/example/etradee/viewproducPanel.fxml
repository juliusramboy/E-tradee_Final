<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="450.0" style="-fx-background-color: #EDEDED; -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #ECCECE; -fx-border-width: 5px;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.etradee.viewProductController">
   <children>
      <Label alignment="CENTER" layoutX="134.0" layoutY="46.0" style="-fx-font-size: 30px; -fx-font-weight: 700;" text="View product" AnchorPane.topAnchor="59.0" />
      <VBox alignment="CENTER" layoutX="51.0" layoutY="137.0" spacing="20.0">
         <children>
            <VBox spacing="15.0">
               <children>
                  <TextField fx:id="viewProduct_name" alignment="CENTER" editable="false" prefHeight="40.0" prefWidth="350.0" style="-fx-font-size: 15px; -fx-background-color: #FFFFFF; -fx-font-weight: 700;" text="Name of product">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="viewProduct_price" alignment="CENTER" editable="false" prefHeight="40.0" prefWidth="350.0" style="-fx-font-size: 15px; -fx-background-color: #FFFFFF; -fx-font-weight: 700;" text="Price">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="viewProduct_quality" alignment="CENTER" editable="false" prefHeight="40.0" prefWidth="350.0" style="-fx-font-size: 15px; -fx-background-color: #FFFFFF; -fx-font-weight: 700;" text="Quantity">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="viewProduct_quantity" alignment="CENTER" editable="false" prefHeight="40.0" prefWidth="350.0" style="-fx-font-size: 15px; -fx-background-color: #FFFFFF; -fx-font-weight: 700;" text="Quality">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </TextField>
               </children>
            </VBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="viewProduct_editBtn" mnemonicParsing="false" onAction="#viewProduct_editHandle" prefHeight="40.0" prefWidth="100.0" style="-fx-font-weight: 700; -fx-font-size: 15; -fx-background-radius: 30px; -fx-background-color: #D9D9D9;" text="Edit" />
                  <Button fx:id="viewProduct_cancelBtn" mnemonicParsing="false" onAction="#viewProduct_deletelHandle" prefHeight="40.0" prefWidth="100.0" style="-fx-font-weight: 700; -fx-font-size: 15; -fx-background-radius: 30px; -fx-background-color: #D9D9D9;" text="Delete" />
                  <Button fx:id="viewProduct_backBtn" mnemonicParsing="false" onAction="#viewProduct_backHandle" prefHeight="40.0" prefWidth="100.0" style="-fx-font-weight: 700; -fx-font-size: 15; -fx-background-radius: 30px; -fx-background-color: #D9D9D9;" text="Back" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
