<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="700.0" stylesheets="@design/design.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.etradee.viewPanelController">
    <children>
        <AnchorPane prefHeight="700.0" prefWidth="700.0" style="-fx-background-color: #EDEDED; -fx-border-color: #ECCECE; -fx-border-width: 5px; -fx-background-radius: 10; -fx-border-radius: 10;" styleClass="root" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox layoutX="175.0" layoutY="14.0" spacing="20.0">
                    <children>
                        <VBox alignment="CENTER" spacing="40.0">
                            <children>
                                <VBox alignment="CENTER">
                                    <children>
                                        <Label alignment="CENTER" style="-fx-font-weight: 700; -fx-font-size: 30px;" text="View Employee" />
                              <ImageView fx:id="VP_profile" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                                    </children>
                                </VBox>
                                <VBox prefWidth="350.0" spacing="10.0">
                                    <children>
                                        <TextField fx:id="VP_name" alignment="CENTER" editable="false" prefHeight="40.0" prefWidth="350.0" style="-fx-background-color: #FFFFFF; -fx-font-weight: 700; -fx-font-size: 15px;" text="Name of Employee">
                                 <tooltip>
                                    <Tooltip text="Name of Employee" />
                                 </tooltip></TextField>
                                        <TextField fx:id="VP_username" alignment="CENTER" editable="false" prefHeight="40.0" prefWidth="350.0" style="-fx-background-color: #FFFFFF; -fx-font-weight: 700; -fx-font-size: 15px;" text="Username">
                                 <tooltip>
                                    <Tooltip text="Username" />
                                 </tooltip></TextField>
                                        <TextField fx:id="VP_password" alignment="CENTER" editable="false" prefHeight="40.0" prefWidth="350.0" style="-fx-background-color: #FFFFFF; -fx-font-weight: 700; -fx-font-size: 15px;" text="Password">
                                 <tooltip>
                                    <Tooltip text="Password" />
                                 </tooltip></TextField>
                                        <TextField fx:id="VP_role" alignment="CENTER" editable="false" prefHeight="40.0" prefWidth="350.0" style="-fx-background-color: #FFFFFF; -fx-font-weight: 700; -fx-font-size: 15px;" text="Role">
                                 <tooltip>
                                    <Tooltip text="Role" />
                                 </tooltip></TextField>
                                        <TextField fx:id="VP_phonenumber" alignment="CENTER" editable="false" prefHeight="40.0" prefWidth="350.0" style="-fx-background-color: #FFFFFF; -fx-font-weight: 700; -fx-font-size: 15px;" text="Phone number">
                                 <tooltip>
                                    <Tooltip text="Phone number" />
                                 </tooltip></TextField>
                                        <TextField fx:id="VP_address" alignment="CENTER" editable="false" prefHeight="40.0" prefWidth="350.0" style="-fx-background-color: #FFFFFF; -fx-font-weight: 700; -fx-font-size: 15px;" text="Address">
                                 <tooltip>
                                    <Tooltip text="Address" />
                                 </tooltip></TextField>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button fx:id="VP_editBtn" mnemonicParsing="false" onAction="#handleEditAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #D9D9D9; -fx-background-radius: 20; -fx-font-weight: 700; -fx-font-size: 15;" styleClass="btnhover" text="Edit" />
                                <Button fx:id="VP_deleteBtn" mnemonicParsing="false" onAction="#handleDeleteAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #D9D9D9; -fx-background-radius: 20; -fx-font-weight: 700; -fx-font-size: 15;" styleClass="btnhover" text="Delete" />
                                <Button fx:id="VP_backBtn" mnemonicParsing="false" onAction="#handleBackAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #D9D9D9; -fx-background-radius: 20; -fx-font-weight: 700; -fx-font-size: 15;" styleClass="btnhover" text="Back" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
